<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nagasawakenji.walkfind.infra.mybatis.mapper.ContestResultMapper">

    <resultMap id="ContestResultMap" type="nagasawakenji.walkfind.domain.model.ContestResult">
        <id property="id" column="id"/>
        <result property="contestId" column="contest_id"/>
        <result property="photoId" column="photo_id"/>
        <result property="finalRank" column="final_rank"/>
        <result property="finalScore" column="final_score"/>
        <result property="isWinner" column="is_winner"/>
        <result property="calculatedAt" column="calculated_at"/>
    </resultMap>

    <!-- ContestResultResponse.java に対応する結果マップ -->
    <resultMap id="ContestResultResponseResultMap" type="nagasawakenji.walkfind.domain.dto.ContestResultResponse">
        <!-- R: contest_results, P: user_photos, U: users -->
        <result property="photoId" column="photo_id"/>
        <result property="contestId" column="contest_id"/>
        <result property="finalRank" column="final_rank"/>
        <result property="finalScore" column="final_score"/>
        <result property="isWinner" column="is_winner"/>

        <!-- user_photos から取得する情報 -->
        <result property="title" column="title"/>
        <result property="photoUrl" column="photo_url"/>
        <result property="submissionDate" column="submission_date"/>

        <!-- users から取得する情報 -->
        <result property="username" column="username"/>
    </resultMap>

    <!-- ContestWinnerDto.javaに対応する優勝作品マップ -->
    <resultMap id="ContestWinnerDtoMap" type="nagasawakenji.walkfind.domain.dto.ContestWinnerDto">
        <!-- R: contest_results, P: user_photos, U: users -->
        <result property="photoId" column="photo_id"/>
        <result property="contestId" column="contest_id"/>
        <result property="finalRank" column="final_rank"/>
        <result property="finalScore" column="final_score"/>

        <!-- user_photos から取得する情報 -->
        <result property="title" column="title"/>
        <result property="photoUrl" column="photo_url"/>
        <result property="submissionDate" column="submission_date"/>

        <!-- users から取得する情報 -->
        <result property="username" column="username"/>
    </resultMap>

    <!-- ★ 結果集計機能：集計済みのレコードを一括で登録する ★ -->
    <insert id="insertAll">
        INSERT INTO contest_results (contest_id, photo_id, final_rank, final_score, is_winner)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.contestId}, #{item.photoId}, #{item.finalRank}, #{item.finalScore}, #{item.isWinner})
        </foreach>
        ON CONFLICT (contest_id, photo_id) DO NOTHING
    </insert>

    <!-- 写真取得機能 : コンテストidから写真を一括取得する -->
    <select id="findByContestId" resultMap="ContestResultMap">
        SELECT *
        FROM contest_results
        WHERE contest_id = #{contestId}
        ORDER BY final_rank
    </select>

    <!-- 写真取得機能 : photoIdから写真を一括取得する -->
    <select id="findByPhotoId" resultMap="ContestResultMap">
        SELECT *
        FROM contest_results
        WHERE photo_id = #{photoId}
        ORDER BY final_rank
    </select>

    <!-- 写真削除機能 : contestIdから写真を一括削除する -->
    <select id="deleteByContestId">
        DELETE FROM contest_results
        WHERE contest_id = #{contestId}
    </select>

    <!-- ★ 結果表示用クエリ: findDetailedResultsByContestId ★ -->
    <select id="findDetailedResultsByContestId" resultMap="ContestResultResponseResultMap">
        SELECT
        R.photo_id,
        R.contest_id,
        R.final_rank,
        R.final_score,
        R.is_winner,
        P.title,
        P.photo_url,
        P.submission_date,
        U.username
        FROM contest_results R
        -- 写真情報と投稿日時を取得
        JOIN user_photos P ON R.photo_id = P.id
        -- 投稿者名を取得
        JOIN users U ON P.user_id = U.id
        WHERE R.contest_id = #{contestId}
        ORDER BY R.final_rank ASC, R.final_score DESC
        LIMIT #{size}
        OFFSET #{page} * #{size}
    </select>

    <select id="countResultsByContestId" resultType="int">
        SELECT COUNT(*)
        FROM contest_results
        WHERE contest_id = #{contestId}
    </select>

    <select id="findWinnerPhotosByContestId" resultMap="ContestWinnerDtoMap">
        SELECT
        R.photo_id,
        R.contest_id,
        R.final_score,
        P.title,
        P.photo_url,
        P.submission_date,
        U.username
        FROM contest_results R
        -- 写真情報と投稿日時を取得
        JOIN user_photos P ON R.photo_id = P.id
        -- 投稿者名を取得
        JOIN users U ON P.user_id = U.id
        WHERE R.contest_id = #{contestId}
        AND R.is_winner = true
        ORDER BY P.submission_date
    </select>



</mapper>